---
import DateTime from './DateTime.astro'

const { event } = Astro.props
---

<article>
  <h1>{event.title}</h1>
  <dl>
    <dt>Wann?</dt>
    <dd>
      <DateTime
        date={event.date}
        dateEnd={event.dateEnd}
        time={event.time}
        timeEnd={event.timeEnd}
      />
    </dd>
    <dt>Wo?</dt>
    <dd>{event.place}</dd>
  </dl>
</article>